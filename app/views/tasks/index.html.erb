<h1 class="text-center mb-4">My Tasks</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6"> <!-- Smaller column size for even narrower content -->
      <div class="list-group">
        <% @tasks.each do |task| %>
          <div class="list-group-item">
            <div class="d-flex justify-content-between align-items-center">
              <%= form_with(model: task, method: :patch, local: true) do |form| %>
                <div class="form-check">
                  <%= form.check_box :completed, class: "form-check-input me-1", id: "task_#{task.id}", onchange: "this.form.submit();" %>
                  <%= label_tag "task_#{task.id}", task.title, class: "form-check-label" %>
                </div>
              <% end %>
              <div>
                <%= link_to edit_task_path(task), class: "btn btn-sm btn-outline-secondary me-2" do %>
                  <i class="fas fa-edit"></i> Edit
                <% end %>
                <!-- Delete Button -->
                <%= link_to task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <%= link_to "+ Add a new task", new_task_path, class: "btn btn-primary mt-3 d-block mx-auto" %>
    </div>
  </div>
</div>
